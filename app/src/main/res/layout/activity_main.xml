<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="1"
        android:rowCount="3"
        android:useDefaultMargins="true">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:layout_gravity="fill_horizontal"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher_foreground" />


        <TextView
            android:id="@+id/bemVindo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/actor"
            android:gravity="center"
            android:padding="@dimen/fab_margin"
            android:text="@string/bemVindo"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnFilme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowSpan="2"
            android:layout_columnSpan="1"
            android:layout_gravity="center_horizontal|fill_horizontal"
            android:background="@drawable/sselector_button"
            android:elevation="10dp"
            android:fontFamily="@font/actor"
            android:gravity="center"
            android:padding="@dimen/fab_margin"
            android:text="@string/btnFilme"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|fill_horizontal"
            android:background="@drawable/sselector_button"
            android:elevation="10dp"
            android:fontFamily="@font/actor"
            android:gravity="center"
            android:padding="@dimen/fab_margin"
            android:text="@string/btnTv"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />
    </GridLayout>

</LinearLayout>