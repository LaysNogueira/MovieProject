<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fbe6e5"
    android:orientation="vertical"
    tools:context=".DetalhesFilmeActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="3">


        <ImageView
            android:id="@+id/conditionImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_rowSpan="1"
            android:layout_columnSpan="2"
            android:layout_gravity="center_horizontal"
            android:elevation="@dimen/padd"
            android:padding="@dimen/fab_margin"
            app:srcCompat="@mipmap/ic_launcher_foreground" />

        <TextView
            android:id="@+id/nomeFilme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/aclonica"
            android:padding="@dimen/fab_margin"
            android:text="@string/filme"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/detalhes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/fab_margin"
            android:text="@string/detalhes"
            android:textColor="@android:color/background_dark"
            android:textSize="14sp" />
    </GridLayout>
</LinearLayout>